{
  "name": "wk-launcher",
  "version": "0.2.0",
  "description": "WonderfulKillers Launcher",
  "main": "wonderfulkillers.js",
  "author": "nicqsizaccent",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nicqsizaccent/wk-launcher"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win nsis",
    "dist:portable": "electron-builder --win portable",
    "publish": "electron-builder --win nsis --publish always"
  },
  "dependencies": {
    "extract-zip": "^2.0.1",
    "electron-updater": "^6.3.9",
    "electron-log": "^5.3.0",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nicqs.wklauncher",
    "productName": "wk-launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "nicqsizaccent",
        "repo": "wk-launcher"
      }
    ]
  }
}
