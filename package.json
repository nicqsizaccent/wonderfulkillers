{
  "name": "republic-of-wonderfulkillers-launcher",
  "version": "0.0.9",
  "description": "RePublic OF WonderfulKillers Game Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start-realtime-server": "node realtime-server.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64"
  },
  "keywords": [
    "launcher",
    "game",
    "discord"
  ],
  "author": "RePublic OF WonderfulKillers",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.7",
    "discord-oauth2": "^2.10.0",
    "discord-rpc": "^4.0.1",
    "ws": "^8.18.0"
  },
  "build": {
    "appId": "com.republicofwk.launcher",
    "productName": "RePublic OF WonderfulKillers",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "nicqsizaccent",
      "repo": "wonderfulkillers"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
